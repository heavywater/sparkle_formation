{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Supercool Website",
  "Resources": {
    "CfnUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "cfn_access",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "cloudformation:DescribeStackResource",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "CfnKeys": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "CfnUser"
        }
      }
    },
    "WebsiteAutoscale": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "AvailabilityZones": {
          "Fn::GetAZs": ""
        },
        "LaunchConfigurationName": {
          "Ref": "WebsiteLaunchConfig"
        },
        "MinSize": {
          "Ref": "WebNodes"
        },
        "MaxSize": {
          "Ref": "WebNodes"
        }
      }
    },
    "WebsiteLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "SecurityGroups": [
          {
            "Ref": "SecurityGroupWebsite"
          }
        ],
        "ImageId": "ami-12345678",
        "InstanceType": "m3.medium"
      }
    },
    "WebsiteElb": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "AvailabilityZones": {
          "Fn::GetAZs": ""
        },
        "Listeners": [
          {
            "LoadBalancerPort": "80",
            "Protocol": "HTTP",
            "InstancePort": "80",
            "InstanceProtocol": "HTTP"
          }
        ],
        "HealthCheck": {
          "Target": "HTTP:80/",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "3",
          "Interval": "10",
          "Timeout": "8"
        }
      }
    }
  },
  "Parameters": {
    "WebNodes": {
      "Type": "Number",
      "Description": "Number of web nodes for ASG.",
      "Default": 2
    }
  }
}
